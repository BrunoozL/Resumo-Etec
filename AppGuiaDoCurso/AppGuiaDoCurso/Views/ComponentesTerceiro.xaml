<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGuiaDoCurso.Views.ComponentesTerceiro"
             BackgroundColor="#F3F2F0"
             Title="Disciplinas do Terceiro Ano">
    <ContentPage.Content>

        <ScrollView>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10">
                <Button Text="Banco de Dados III" Clicked="Button_Clicked" Style="{StaticResource botaoCinza}"/>
                <Button Text="Programação de Aplicativos Mobile II" Clicked="Button_Clicked_1" Style="{StaticResource botaoCinza}"/>
                <Button Text="Programação Web III" Clicked="Button_Clicked_2" Style="{StaticResource botaoCinza}"/>
                <Button Text="Qualidade e Teste de Software" Clicked="Button_Clicked_3" Style="{StaticResource botaoCinza}"/>
                <Button Text="Internet e Protocolos" Clicked="Button_Clicked_4" Style="{StaticResource botaoCinza}"/>
                <Button Text="Desenvolvimento do Trabalho de Conclusão de Curso (TCC)" Clicked="Button_Clicked_5" Style="{StaticResource botaoCinza}"/>
            </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>