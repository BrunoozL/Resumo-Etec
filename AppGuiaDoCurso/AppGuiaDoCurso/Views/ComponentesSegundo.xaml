             x:Class="AppGuiaDoCurso.Views.ComponentesSegundo"
             BackgroundColor="#F3F2F0"
             Title="Disciplinas do Segundo Ano">
    <ContentPage.Content>

        <ScrollView>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10">
                <Button Text="Desenvolvimento de Sistemas" Clicked="Button_Clicked" Style="{ StaticResource botaoVermelho }" />
                <Button Text="Banco de Dados II " Clicked="Button_Clicked_1" Style="{ StaticResource botaoVermelho }" />
                <Button Text="Programação de Aplicativos Mobile I " Clicked="Button_Clicked_2" Style="{ StaticResource botaoVermelho }" />
                <Button Text="Programação Web II" Clicked="Button_Clicked_3" Style="{ StaticResource botaoVermelho }" />
                <Button Text="Sistemas Embarcados" Clicked="Button_Clicked_4" Style="{ StaticResource botaoVermelho }" />
